<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:x2c="http://www.mlhim.org/xmlns/mlhim2/xml2ccd"
  targetNamespace="http://www.mlhim.org/xmlns/mlhim2/xml2ccd" version="2.4.4"
  xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning" vc:minVersion="1.0">

  <xs:element name="xml-to-ccd" type="x2c:xml-to-ccd"/>
  
  <xs:complexType name="xml-to-ccd">
    <xs:sequence>
      <xs:element name="version" minOccurs="1" maxOccurs="1" type="xs:string" fixed="2.4.4"/>
      <xs:element minOccurs="1" maxOccurs="1" name="ccd-def" type="x2c:ccd-def"/>
      <xs:element minOccurs="1" maxOccurs="1" ref="x2c:entry"/>
    </xs:sequence>
  </xs:complexType>
  
  <xs:complexType name="ccd-def">
    <xs:sequence>
      <xs:element name="title" type="xs:string"/>
      <xs:element name="description" type="xs:string" default="None provided by author."/>
      <xs:element name="subject" type="xs:string" default="None provided by author."/>
      <xs:element name="source" type="xs:string" default="None provided by author."/>
      <xs:element name="rights" type="xs:string" default="None provided by author."/>
      <xs:element name="relation" type="xs:string" default="None provided by author."/>
      <xs:element name="coverage" type="xs:string" default="None provided by author."/>
      <xs:element name="creator-name" type="xs:string"/>
      <xs:element name="creator-email" type="xs:string"/>
      <xs:element name="contributor">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="name" minOccurs="1" maxOccurs="1" type="xs:string"/>
            <xs:element name="email" minOccurs="1" maxOccurs="1" type="xs:string"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  
  <xs:element name="entry">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="entry-type">
          <xs:simpleType>
            <xs:restriction base="xs:string">
              <xs:enumeration value="admin"/>
              <xs:enumeration value="care"/>
              <xs:enumeration value="demog"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:element>
        <xs:element minOccurs="0" maxOccurs="unbounded" name="entry-link" type="x2c:dvuri"/> <!-- entry-links = DvURI -->
        <xs:element maxOccurs="1" minOccurs="0" name="entry-audit"/>
        <xs:element maxOccurs="1" minOccurs="1" name="language" type="xs:language"/>
        <xs:element maxOccurs="1" minOccurs="1" name="encoding" type="xs:string"/>
        <xs:element maxOccurs="1" minOccurs="1" name="entry-subject" type="x2c:party"/>  
        <xs:element maxOccurs="1" minOccurs="0" name="entry-provider" type="x2c:party"/>
        <xs:element maxOccurs="unbounded" minOccurs="0" name="other-participations" type="x2c:participation"/>            
        <xs:element maxOccurs="1" minOccurs="0" name="protocol-id" type="x2c:dvidentifier"/>            
        <xs:element maxOccurs="1" minOccurs="0" name="current-state" type="xs:string"/>    
        <xs:element maxOccurs="1" minOccurs="0" name="workflow-id" type="x2c:dvuri"/>            
        <xs:element maxOccurs="1" minOccurs="0" name="attestation" type="x2c:attestation"/>    
        <xs:element maxOccurs="1" minOccurs="1" name="entry-data" type="x2c:cluster"/>    
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="cluster">
    <xs:sequence>
      <xs:element minOccurs="1" maxOccurs="1" name="data-name" type="xs:string"/>
      <xs:element minOccurs="0" maxOccurs="1" name="resource-uri" type="xs:string"/>
      <xs:element minOccurs="0" maxOccurs="1" name="description" type="xs:string"/>
      <xs:element minOccurs="1" maxOccurs="unbounded" name="dv" type="x2c:dvany"/>
      <xs:element minOccurs="0" maxOccurs="unbounded" name="cluster" type="x2c:cluster"/>
    </xs:sequence>
  </xs:complexType>
  
  <xs:complexType abstract="true" name="dvany">
    <xs:sequence>
      <xs:element minOccurs="1" maxOccurs="1" name="data-name" type="xs:string"/>
      <xs:element minOccurs="0" maxOccurs="1" name="resource-uri" type="xs:string"/>
      <xs:element minOccurs="0" maxOccurs="1" name="description" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>
  
  <xs:complexType name="dvuri">
    <xs:complexContent>
      <xs:extension base="x2c:dvany">
        <xs:sequence>
             <xs:element minOccurs="0" maxOccurs="1" name="relation" type="xs:string"/> <!-- semi-colon separated list used for enumerations -->          
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="dvstring">
    <xs:complexContent>
      <xs:extension base="x2c:dvany">
        <xs:sequence>
          <xs:element minOccurs="0" maxOccurs="1" name="enumerations" type="xs:string"/> <!-- semi-colon separated list used for enumerations -->          
          <xs:element minOccurs="0" maxOccurs="1" name="pattern" type="xs:string"/> <!-- regexp -->          
          <xs:element minOccurs="0" maxOccurs="1" name="length" type="xs:decimal"/>                    
          <xs:element minOccurs="0" maxOccurs="1" name="min-length" type="xs:decimal"/>                    
          <xs:element minOccurs="0" maxOccurs="1" name="max-length" type="xs:decimal"/>                    
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <xs:complexType name="dvcodedstring">
    <xs:complexContent>
      <xs:extension base="x2c:dvstring">
        <xs:sequence>
          <xs:element minOccurs="1" maxOccurs="1" name="abbrev" type="xs:string"/> <!-- semi-colon separated list used for enumerations -->          
          <xs:element minOccurs="1" maxOccurs="1" name="name" type="xs:string"/> <!-- semi-colon separated list used for enumerations -->          
          <xs:element minOccurs="1" maxOccurs="1" name="version" type="xs:string"/> <!-- semi-colon separated list used for enumerations -->          
          <xs:element minOccurs="1" maxOccurs="1" name="code" type="xs:string"/> <!-- semi-colon separated list used for enumerations -->          
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  

  <xs:complexType name="dvidentifier">
    <xs:complexContent>
      <xs:extension base="x2c:dvstring">
        <xs:sequence>
          <xs:element minOccurs="1" maxOccurs="1" name="id-name" type="xs:string"/> <!-- semi-colon separated list used for enumerations -->          
          <xs:element minOccurs="1" maxOccurs="1" name="issuer" type="xs:string"/> <!-- semi-colon separated list used for enumerations -->          
          <xs:element minOccurs="1" maxOccurs="1" name="assignor" type="xs:string"/> <!-- semi-colon separated list used for enumerations -->                    
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="dvboolean">
    <xs:complexContent>
      <xs:extension base="x2c:dvany">
        <xs:sequence>
          <xs:element minOccurs="1" maxOccurs="1" name="trues" type="xs:string"/> <!-- semi-colon separated list used for enumerations -->          
          <xs:element minOccurs="1" maxOccurs="1" name="falses" type="xs:string"/> <!-- semi-colon separated list used for enumerations -->          
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  
  
  





  <xs:complexType name="attestation">
    <xs:sequence>
      <xs:element minOccurs="1" maxOccurs="1" name="data-name" type="xs:string"/>
      <xs:element minOccurs="0" maxOccurs="1" name="resource-uri" type="xs:string"/>
      <xs:element minOccurs="0" maxOccurs="1" name="description" type="xs:string"/>
      
    </xs:sequence>
  </xs:complexType>
  
  
  <xs:complexType name="party">
    <xs:sequence>
      <xs:element minOccurs="1" maxOccurs="1" name="data-name" type="xs:string"/>
      <xs:element minOccurs="0" maxOccurs="1" name="resource-uri" type="xs:string"/>
      <xs:element minOccurs="0" maxOccurs="1" name="description" type="xs:string"/>
      
    </xs:sequence>
  </xs:complexType>
  
  <xs:complexType name="participation">
    <xs:sequence>
      <xs:element minOccurs="1" maxOccurs="1" name="data-name" type="xs:string"/>
      <xs:element minOccurs="0" maxOccurs="1" name="resource-uri" type="xs:string"/>
      <xs:element minOccurs="0" maxOccurs="1" name="description" type="xs:string"/>
      
    </xs:sequence>
  </xs:complexType>


